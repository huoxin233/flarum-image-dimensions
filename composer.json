{
    "name": "dshovchko/flarum-image-dimensions",
    "description": "Automatically adds width and height attributes to images in Flarum posts for better performance and SEO.",
    "keywords": ["flarum", "extension", "images", "performance", "seo", "lazy-loading"],
    "license": "MIT",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "DShovchko\\ImagesChecker\\": "src/",
            "s9e\\TextFormatter\\Plugins\\Autoimage\\": "overrides/Autoimage",
            "s9e\\TextFormatter\\Plugins\\Litedown\\Parser\\Passes\\": "overrides/Litedown/Parser/Passes"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Image Dimensions",
            "icon": {
                "name": "fas fa-image",
                "backgroundColor": "#238c59",
                "color": "#fff"
            }
        }
    }
}